<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNavBar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:onClick="onClickOpenDrawer"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="56dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clNavBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imNavBar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/gg_menu_left_alt" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imLogo"
                android:layout_width="121dp"
                android:layout_height="42dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/im_viewlogo" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"

                android:layout_marginTop="25dp"
                android:layout_marginEnd="35dp"
                android:clickable="true"
                android:onClick="onClickGoMyProfile"

                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="56dp"
                app:cardForegroundColor="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:rippleColor="@color/transparent"
                app:strokeColor="@color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imAvatar"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/im_avatar_default"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvCart"
                android:layout_width="56dp"
                android:layout_height="56dp"

                android:layout_marginTop="25dp"
                android:layout_marginEnd="35dp"
                android:clickable="true"
                android:onClick="onClickGoMyCart"

                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:visibility="gone"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="56dp"
                app:cardForegroundColor="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/transparent"
                app:strokeColor="@color/light_gray">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imCart"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_cart" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcvMainContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/clBottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clHead" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clHome"
                android:layout_width="117dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/background_bottom_bar"
                android:clickable="true"
                android:onClick="onClickOpenHomeFrame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomeContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imHome"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_home_selected" />

                    <TextView
                        android:id="@+id/tHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/quicksand"
                        android:lineHeight="20dp"
                        android:text="Home"
                        android:textColor="@color/dark_gray"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imHome"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clInventory"
                android:layout_width="117dp"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="13dp"
                android:background="@color/transparent"
                android:clickable="true"
                android:onClick="onClickOpenInventoryFrame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clInventoryContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imInventory"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_inventory" />

                    <TextView
                        android:id="@+id/tInventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/quicksand"
                        android:lineHeight="20dp"
                        android:text="Inventory"
                        android:textColor="@color/dark_gray"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imInventory"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/ib_sos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_shape_circle"
            android:clickable="true"
            android:elevation="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_sos_alert" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDrawer"
        android:layout_width="334dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/svDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clScrollDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imClose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="27dp"
                    android:clickable="true"
                    android:onClick="onClickCloseDrawer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_cross" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDrawerUserData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="64dp"
                    android:clickable="true"
                    android:onClick="onClickGoMyProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvDrawerAvatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"

                        android:clickable="true"
                        android:onClick="onClickGoMyProfile"

                        android:outlineAmbientShadowColor="@color/transparent"
                        android:outlineSpotShadowColor="@color/transparent"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="56dp"
                        app:cardForegroundColor="@color/transparent"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rippleColor="@color/transparent"
                        app:strokeColor="@color/transparent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clDrawerAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imDrawerAvatar"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/im_avatar_default"
                                tools:srcCompat="@tools:sample/avatars" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clUserDataTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/mcvDrawerAvatar"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tDrawerUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="Raghvendra Sinha"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tDrawerJobPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="Medical Attendant"
                            android:textColor="@color/gray"
                            android:textFontWeight="400"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@+id/tDrawerUsername"
                            app:layout_constraintTop_toBottomOf="@+id/tDrawerUsername" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcvDrawerMyEarnings"
                    android:layout_width="263dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="39dp"

                    android:clickable="true"

                    android:onClick="onClickGoMyProfile"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:outlineSpotShadowColor="@color/transparent"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardForegroundColor="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clDrawerUserData"
                    app:rippleColor="@color/transparent"
                    app:strokeColor="@color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clDrawerMyEarnings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvDrawerMyEarningsImage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"

                            android:layout_marginStart="20dp"

                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="12dp"
                            android:outlineAmbientShadowColor="@color/transparent"
                            android:outlineSpotShadowColor="@color/transparent"

                            android:visibility="visible"
                            app:cardBackgroundColor="@color/gray_drawer"
                            app:cardCornerRadius="56dp"
                            app:cardForegroundColor="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="@color/transparent"
                            app:strokeColor="@color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clDrawerMyEarningsImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imDrawerMyEarningsImage"
                                    android:layout_width="26dp"
                                    android:layout_height="24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_earnings" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tMyEarnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:fontFamily="@font/quicksand"
                            android:text="My Earnings"
                            android:textColor="@color/gray_drawer_text"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/mcvDrawerMyEarningsImage"
                            app:layout_constraintStart_toEndOf="@+id/mcvDrawerMyEarningsImage"
                            app:layout_constraintTop_toTopOf="@+id/mcvDrawerMyEarningsImage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcvDrawerBilling"
                    android:layout_width="263dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"

                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:onClick="onClickGoMyProfile"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:outlineSpotShadowColor="@color/transparent"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardForegroundColor="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mcvDrawerMyEarnings"
                    app:rippleColor="@color/transparent"
                    app:strokeColor="@color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clDrawerBilling"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvDrawerBillingImage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"

                            android:layout_marginStart="20dp"

                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="12dp"
                            android:clickable="false"
                            android:outlineAmbientShadowColor="@color/transparent"
                            android:outlineSpotShadowColor="@color/transparent"

                            android:visibility="visible"
                            app:cardBackgroundColor="@color/gray_drawer"
                            app:cardCornerRadius="56dp"
                            app:cardForegroundColor="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="@color/transparent"
                            app:strokeColor="@color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clDrawerBillingImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imDrawerBillingImage"
                                    android:layout_width="26dp"
                                    android:layout_height="24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_billing" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tBilling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:fontFamily="@font/quicksand"
                            android:text="Billing"
                            android:textColor="@color/gray_drawer_text"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/mcvDrawerBillingImage"
                            app:layout_constraintStart_toEndOf="@+id/mcvDrawerBillingImage"
                            app:layout_constraintTop_toTopOf="@+id/mcvDrawerBillingImage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcvDrawerMyInventory"
                    android:layout_width="263dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="20dp"

                    android:clickable="true"

                    android:onClick="onClickGoInventory"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:outlineSpotShadowColor="@color/transparent"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardForegroundColor="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mcvDrawerBilling"
                    app:rippleColor="@color/transparent"
                    app:strokeColor="@color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clDrawerMyInventory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvDrawerMyInventoryImage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"

                            android:layout_marginStart="20dp"

                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="12dp"
                            android:clickable="false"
                            android:outlineAmbientShadowColor="@color/transparent"
                            android:outlineSpotShadowColor="@color/transparent"

                            android:visibility="visible"
                            app:cardBackgroundColor="@color/gray_drawer"
                            app:cardCornerRadius="56dp"
                            app:cardForegroundColor="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="@color/transparent"
                            app:strokeColor="@color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clDrawerMyInventoryImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imDrawerMyInventoryImage"
                                    android:layout_width="26dp"
                                    android:layout_height="24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_inventory_for_drawer" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tMyInventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:fontFamily="@font/quicksand"
                            android:text="My Inventory"
                            android:textColor="@color/gray_drawer_text"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/mcvDrawerMyInventoryImage"
                            app:layout_constraintStart_toEndOf="@+id/mcvDrawerMyInventoryImage"
                            app:layout_constraintTop_toTopOf="@+id/mcvDrawerMyInventoryImage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

