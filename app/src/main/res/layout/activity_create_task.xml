<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.TaskDetailsActivity">

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/quicksand"
        android:text="Create Task"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/background_back_notext"
        android:clickable="true"
        android:onClick="onClickBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_alt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTaskInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/clBack">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/background_task_form_elems"
            android:fontFamily="@font/quicksand"
            android:gravity="left|center_vertical"
            android:hint="Title of Task"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_due_date_light_blue_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inTitle">

            <ImageView
                android:id="@+id/icWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_watch_blue_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clInputTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/background_task_form_elems"
                android:clickable="true"
                android:onClick="onClickOpenTimePickerDialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icWatch"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvInputTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/quicksand"
                    android:gravity="center"
                    android:text="Set Time"
                    android:textColor="@color/blue_green3"
                    android:textFontWeight="500"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clInputDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/background_task_form_elems"
                android:clickable="true"
                android:onClick="onClickOpenDatePickerDialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/clInputTime"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvInputDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/quicksand"
                    android:gravity="center"
                    android:text="Set Date"
                    android:textColor="@color/blue_green3"
                    android:textFontWeight="500"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clDueDate">

            <ImageView
                android:id="@+id/icPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:background="@drawable/background_task_form_elems"
                android:fontFamily="@font/quicksand"
                android:gravity="left|center_vertical"
                android:hint="Patient Name"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/icPatient"
                app:layout_constraintStart_toEndOf="@+id/icPatient"
                app:layout_constraintTop_toTopOf="@+id/icPatient" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPeriodicity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:background="@drawable/background_periodicity_blue_green"
            app:layout_constraintBottom_toBottomOf="@+id/clDueDate"
            app:layout_constraintStart_toEndOf="@+id/clDueDate"
            app:layout_constraintTop_toTopOf="@+id/clDueDate">

            <Spinner
                android:id="@+id/sPeriodicity"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTaskFormMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clButtonsBlock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clTaskInfo">

        <ScrollView
            android:id="@+id/svTaskForm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTaskForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clBloodPressure1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvBloodPressure1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Blood Pressure"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inBloodPressure1"
                        android:layout_width="122dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/background_task_form_elems"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvBloodPressure1"
                        app:layout_constraintStart_toEndOf="@+id/tvBloodPressure1"
                        app:layout_constraintTop_toTopOf="@+id/tvBloodPressure1" />

                    <TextView
                        android:id="@+id/tvBloodPressureMeasure1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="-4dp"
                        android:fontFamily="@font/quicksand"
                        android:text="mm/hg"
                        android:textColor="@color/light_gray4"
                        android:textFontWeight="600"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/inBloodPressure1"
                        app:layout_constraintStart_toEndOf="@+id/inBloodPressure1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBloodPressureAddPic1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/background_task_form_elems"
                        android:clickable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvBloodPressure1">

                        <TextView
                            android:id="@+id/tvBloodPressureAddPic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Add Pic of Reading"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHeartRate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clBloodPressure1">

                    <TextView
                        android:id="@+id/tvHeartRate1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Heart Rate"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inHeartRate1"
                        android:layout_width="122dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/background_task_form_elems"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvHeartRate1"
                        app:layout_constraintStart_toEndOf="@+id/tvHeartRate1"
                        app:layout_constraintTop_toTopOf="@+id/tvHeartRate1" />

                    <TextView
                        android:id="@+id/tvHeartRateMeasure1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="-4dp"
                        android:fontFamily="@font/quicksand"
                        android:text="bpm"
                        android:textColor="@color/light_gray4"
                        android:textFontWeight="600"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/inHeartRate1"
                        app:layout_constraintStart_toEndOf="@+id/inHeartRate1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHeartRateAddPic1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/background_task_form_elems"
                        android:clickable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHeartRate1">

                        <TextView
                            android:id="@+id/tvHeartRateAddPic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Add Pic of Reading"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clBloodSampleCollection1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clHeartRate1">

                    <TextView
                        android:id="@+id/tvBloodSampleCollection1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Blood Sample Collection"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBloodSampleCollectionMarkCollected1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:background="@drawable/background_task_form_elems"
                        android:clickable="true"
                        android:onClick="onClickSwitchBloodCollected"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvBloodSampleCollection1">

                        <TextView
                            android:id="@+id/tvBloodSampleCollectionMarkCollected1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mark as Collected"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBloodSampleCollectionAddPic1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/background_task_form_elems"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clBloodSampleCollectionMarkCollected1">

                        <TextView
                            android:id="@+id/tvBloodSampleCollectionAddPic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Add Pic of Reading"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clButtonsBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSave"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_save"
                android:clickable="true"
                android:onClick="onClickCreateTask"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/clMarkCompleted"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/blue"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMarkCompleted"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/background_mark_completed"
                android:clickable="true"
                android:onClick="onClickSwitchCompleted"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/clSave"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvMarkCompleted"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:gravity="center"
                    android:text="Mark Completed"
                    android:textColor="@color/blue_green3"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>